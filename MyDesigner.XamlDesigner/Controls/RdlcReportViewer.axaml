<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MyDesigner.XamlDesigner.RdlcReportViewer">
   <Border Background="White" BorderBrush="#FFCCCCCC" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#FFF0F0F0" BorderBrush="#FFCCCCCC" BorderThickness="0,0,0,1" Padding="10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📊" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0" />
                    <StackPanel>
                        <TextBlock Text="عارض التقارير RDLC" FontWeight="Bold" FontSize="14" />
                        <TextBlock x:Name="ReportTitle" Text="لا يوجد تقرير محمل" FontSize="12" Foreground="#FF666666" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" x:Name="ContentScrollViewer" >
                <StackPanel x:Name="ReportContentPanel" Margin="20">
                    <!-- Default Content -->
                    <StackPanel x:Name="DefaultContent" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="📄" FontSize="48" HorizontalAlignment="Center" Foreground="#FFCCCCCC" />
                        <TextBlock Text="عارض التقارير RDLC" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0" />
                        <TextBlock Text="استخدم LoadReport() لتحميل تقرير" FontSize="14" Foreground="#FF666666" HorizontalAlignment="Center" Margin="0,5,0,0" />
                        <TextBlock Text="ملاحظة: هذا عارض مبسط للتقارير في Avalonia UI" FontSize="12" Foreground="#FF999999" HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" />
                    </StackPanel>

                    <!-- Report Content -->
                    <StackPanel x:Name="ReportContent" IsVisible="False">
                        <TextBlock x:Name="ReportInfo" TextWrapping="Wrap" FontSize="12" Foreground="#FF333333" />
                        
                        <!-- Data Preview -->
                        <Border x:Name="DataPreviewBorder" Background="#FFF8F9FA" BorderBrush="#FFDDDDDD" BorderThickness="1" CornerRadius="4" Margin="0,20,0,0" IsVisible="False">
                            <StackPanel Margin="15">
                                <TextBlock Text="معاينة البيانات" FontWeight="Bold" FontSize="14" Margin="0,0,0,10" />
                                <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                                    <TextBlock x:Name="DataPreviewText" FontFamily="Consolas,Monaco,monospace" FontSize="11" TextWrapping="Wrap" />
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
